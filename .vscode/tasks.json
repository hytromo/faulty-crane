{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Go Install",
			"type": "shell",
			"command": "go install cli/faulty-crane/*.go",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Go Test",
			"type": "shell",
			"command": "go test -cover ./...",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Go Coverage",
			"type": "shell",
			"command": "tmp=$(mktemp) && go test -coverprofile $tmp ./... && go tool cover -html=$tmp",
			"presentation": {
				"echo": false,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": []
		}
	]
}